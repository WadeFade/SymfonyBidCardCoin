{% extends 'base.html.twig' %}

{% block title %}Ordre d'achat{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4 mb-4">Ordre d'achat</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ordre_achat.id }}</td>
            </tr>
            <tr>
                <th>PrixMax</th>
                <td>{{ ordre_achat.prixMax }}</td>
            </tr>
            <tr>
                <th>DateOrdreAchat</th>
                <td>{{ ordre_achat.dateOrdreAchat ? ordre_achat.dateOrdreAchat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('ordre_achat_index') }}">Retour</a>

        <a class="btn btn-success" href="{{ path('ordre_achat_edit', {'id': ordre_achat.id}) }}">Modifier</a>

        {{ include('ordre_achat/_delete_form.html.twig') }}
    </div>
{% endblock %}
