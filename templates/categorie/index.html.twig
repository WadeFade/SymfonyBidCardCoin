{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="mt-4 mb-4">Liste des catégories</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>NomCategorie</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.nomCategorie }}</td>
                    <td>{{ categorie.description }}</td>
                    <td>
                        <a class="btn btn-success" href="{{ path('categorie_show', {'id': categorie.id}) }}"><i
                                    class="fas fa-eye"></i></a>
                        <a class="btn btn-primary" href="{{ path('categorie_edit', {'id': categorie.id}) }}"><i
                                    class="fas fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune catégorie trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-success" href="{{ path('categorie_new') }}">Ajouter</a>
    </div>
{% endblock %}
