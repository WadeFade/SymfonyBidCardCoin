{% extends 'base.html.twig' %}

{% block title %}Vente{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4 mb-4">Vente</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vente.id }}</td>
            </tr>
            <tr>
                <th>NomVente</th>
                <td>{{ vente.nomVente }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ vente.description }}</td>
            </tr>
            <tr>
                <th>Lot lié</th>
                <td>{{ vente.lot }}</td>
            </tr>
            <tr>
                <th>Commissaire</th>
                <td>{{ vente.commissaire }}</td>
            </tr>
            <tr>
                <th>Début</th>
                <td>{{ vente.dateStart ? vente.dateStart|date('Y-m-d H:i:s') : ' - ' }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ vente.dateEnd }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('vente_index') }}">Retour</a>

        <a class="btn btn-success" href="{{ path('vente_edit', {'id': vente.id}) }}">Modifier</a>

        {{ include('vente/_delete_form.html.twig') }}
    </div>
{% endblock %}
