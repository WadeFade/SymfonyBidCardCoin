{% extends 'base.html.twig' %}

{% block title %}Liste des ventes{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="mt-4 mb-4">Liste des ventes</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>NomVente</th>
                <th>Description</th>
                <th>Lot lié</th>
                <th>Commissaire</th>
                <th>Début</th>
                <th>Fin</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for vente in ventes %}
                <tr>
                    <td>{{ vente.id }}</td>
                    <td>{{ vente.nomVente }}</td>
                    <td>{{ vente.description }}</td>
                    <td>{{ vente.lot }}</td>
                    <td>{{ vente.commissaire }}</td>
                    <td>{{ vente.dateStart ? vente.dateStart|date('Y-m-d H:i:s') : ' - ' }}</td>
                    <td>{{ vente.dateEnd ? vente.dateEnd|date('Y-m-d H:i:s') : ' - ' }}</td>
                    <td>
                        <a class="btn btn-success" href="{{ path('vente_show', {'id': vente.id}) }}"><i
                                    class="fas fa-eye"></i></a>
                        <a class="btn btn-primary" href="{{ path('vente_edit', {'id': vente.id}) }}"><i
                                    class="fas fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune vente trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-success" href="{{ path('vente_new') }}">Ajouter</a>
    </div>
{% endblock %}
