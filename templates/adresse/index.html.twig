{% extends 'base.html.twig' %}

{% block title %}Liste des adresses{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="mt-4 mb-4">Liste des adresses</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Num</th>
                <th>Rue</th>
                <th>Ville</th>
                <th>CodePostal</th>
                <th>Pays</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for adresse in adresses %}
                <tr>
                    <td>{{ adresse.id }}</td>
                    <td>{{ adresse.num }}</td>
                    <td>{{ adresse.rue }}</td>
                    <td>{{ adresse.ville }}</td>
                    <td>{{ adresse.codePostal }}</td>
                    <td>{{ adresse.pays }}</td>
                    <td>
                        <a class="btn btn-success" href="{{ path('adresse_show', {'id': adresse.id}) }}"><i class="fas fa-eye"></i></a>
                        <a class="btn btn-primary" href="{{ path('adresse_edit', {'id': adresse.id}) }}"><i class="fas fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucune adresse trouv√©e</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-success" href="{{ path('adresse_new') }}">Ajouter</a>
    </div>
{% endblock %}
