{% extends 'base.html.twig' %}

{% block title %}Adresse{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="">Adresse</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ adresse.id }}</td>
            </tr>
            <tr>
                <th>Num</th>
                <td>{{ adresse.num }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ adresse.rue }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ adresse.ville }}</td>
            </tr>
            <tr>
                <th>CodePostal</th>
                <td>{{ adresse.codePostal }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ adresse.pays }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('adresse_index') }}">Retour</a>

        <a class="btn btn-success" href="{{ path('adresse_edit', {'id': adresse.id}) }}">Modifier</a>

        {{ include('adresse/_delete_form.html.twig') }}
    </div>
{% endblock %}
