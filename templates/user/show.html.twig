{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4 mb-4">Utilisateur :</h1>
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
{#            <tr>#}
{#                <th>Password</th>#}
{#                <td>{{ user.password }}</td>#}
{#            </tr>#}
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>DateNaissance</th>
                <td>{{ user.dateNaissance ? user.dateNaissance|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>VerifIdentite</th>
                <td>{{ user.verifIdentite ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ModePaiement</th>
                <td>{{ user.modePaiement }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('user_index') }}">Retour</a>

        <a class="btn btn-success" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>

        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
