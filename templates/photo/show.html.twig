{% extends 'base.html.twig' %}

{% block title %}Photo{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4 mb-4">Photo</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ photo.id }}</td>
            </tr>
            <tr>
                <th>NomPhoto</th>
                <td>{{ photo.nomPhoto }}</td>
            </tr>
            <tr>
                <th>UrlPhoto</th>
                <td>{{ photo.urlPhoto }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('photo_index') }}">Retour</a>

        <a class="btn btn-success" href="{{ path('photo_edit', {'id': photo.id}) }}">Modifier</a>

        {{ include('photo/_delete_form.html.twig') }}
    </div>
{% endblock %}
