{% extends 'base.html.twig' %}

{% block title %}Liste des Photos{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="mt-4 mb-4">Listes des photos</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>NomPhoto</th>
                <th>UrlPhoto</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for photo in photos %}
                <tr>
                    <td>{{ photo.id }}</td>
                    <td>{{ photo.nomPhoto }}</td>
                    <td>{{ photo.urlPhoto }}</td>
                    <td>
                        <a class="btn btn-success" href="{{ path('photo_show', {'id': photo.id}) }}"><i class="fas fa-eye"></i></a>
                        <a class="btn btn-primary" href="{{ path('photo_edit', {'id': photo.id}) }}"><i class="fas fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune photo trouv√©e</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-success" href="{{ path('photo_new') }}">Ajouter</a>
    </div>
{% endblock %}
