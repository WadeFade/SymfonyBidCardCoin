{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>NomProduit</th>
                <td>{{ produit.nomProduit }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>PrixReserve</th>
                <td>{{ produit.prixReserve }}</td>
            </tr>
            <tr>
                <th>PrixDepart</th>
                <td>{{ produit.prixDepart }}</td>
            </tr>
            <tr>
                <th>PrixVente</th>
                <td>{{ produit.prixVente }}</td>
            </tr>
            <tr>
                <th>EstVendu</th>
                <td>{{ produit.estVendu ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>EnStock</th>
                <td>{{ produit.enStock ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>NbInvendu</th>
                <td>{{ produit.nbInvendu }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('produit_index') }}">Retour</a>

    <a class="btn btn-success" href="{{ path('produit_edit', {'id': produit.id}) }}">Modifier</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
