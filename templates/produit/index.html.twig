{% extends 'base.html.twig' %}

{% block title %}CRUD Produit{% endblock %}

{% block body %}
    <div class="container-fluid">
    <h1 class="mt-4 mb-4">Liste de tous les produits</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomProduit</th>
{#                <th>Description</th>#}
                <th>Estimation</th>
                <th>PrixReserve</th>
                <th>PrixDepart</th>
                <th>PrixVente</th>
                <th>EstVendu</th>
                <th>EnStock</th>
                <th>NbInvendu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nomProduit }}</td>
{#                <td>{{ produit.description }}</td>#}
                <td>{{ produit.estimations.last }}</td>
                <td>{{ produit.prixReserve }}</td>
                <td>{{ produit.prixDepart }}</td>
                <td>{{ produit.prixVente }}</td>
                <td>{{ produit.estVendu ? 'Yes' : 'No' }}</td>
                <td>{{ produit.enStock ? 'Yes' : 'No' }}</td>
                <td>{{ produit.nbInvendu }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('produit_show', {'id': produit.id}) }}"><i class="fas fa-eye"></i></a>
                    <a class="btn btn-primary" href="{{ path('produit_edit', {'id': produit.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucun produit trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('produit_new') }}">Ajouter</a>
    </div>
{% endblock %}
